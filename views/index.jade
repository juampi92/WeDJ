doctype html
html
  head
    title WeDJ
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/css/bootstrap-theme.min.css')
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/styles.min.css')
    style(type='text/css')
      body { padding-bottom: 40px; }
      .sidebar-nav { padding: 9px 0; }
  body
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container.fixwidth
        .navbar-header
          button.navbar-toggle.nav-keepback(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only(data-lang="nav.navigation")
            span.icon-bar
            span.icon-bar
            span.icon-bar
          #playingsong
            a.navbar-brand
              span.icons
                span.glyphicon.glyphicon-music
              span.song(data-lang="loading}")
        .navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right.nav-keepback
            li
              a.voteNext(href="#",data-toggle="tooltip",data-placement="bottom",title="nav.nextSong")
                span.glyphicon.glyphicon-forward
                span.descr(data-lang="nav.nextSong")
                span.badge
            li#adminOptions.dropdown.hide
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                span(data-lang="nav.options")
                b.caret
              ul.dropdown-menu.adminMenu
                li.dropdown-header #{ip}
                li.divider
                li
                  a(href='#',data-accion='libs')
                    span.glyphicon.glyphicon-list-alt
                    span(data-lang="nav.libs")
                li.auto-pilot.active
                  a(href='#',data-accion='autop')
                    span.glyphicon.glyphicon-ok
                    span.glyphicon.glyphicon-random
                    |Auto-pilot
                li.divider
                li.dropdown-header(data-lang="nav.playlist")
                li.buttonPlay
                  a(href='#',data-accion='rep',data-cmd='play')
                    span.glyphicon.glyphicon-play
                    span(data-lang="nav.play")
                li.buttonStop
                  a(href='#',data-accion='rep',data-cmd='stop')
                    span.glyphicon.glyphicon-stop
                    span(data-lang="nav.stop")
                li
                  a(href='#',data-accion='rep',data-cmd='next')
                    span.glyphicon.glyphicon-forward
                    span(data-lang="nav.next")
                li.divider
                li
                  a(href='#',data-accion='exit')
                    span.glyphicon.glyphicon-off
                    span(data-lang="nav.exit")
    .site-wrapper
      .site-wrapper-inner
        .cover-container
          .masthead.clearfix
            .inner
              h3.masthead-brand WeDJ
              ul.nav.masthead-nav
                li.active(data-dir="playlist")
                  a.navButton(href="#",data-lang="header.playlist")
                li(data-dir="library")
                  a.navButton(href="#",data-lang="header.library")
                li(data-dir="chat")
                  a.navButton(href="#",data-lang="header.chat")
                    span.badge
                li(data-dir="about")
                  a.navButton(href="#",data-lang="header.about")
          .inner.cover            
            #content
              #tab_playlist.active
                h1.cover-heading(data-lang="header.playlist")
                ul#playlist
              #tab_library
                h1.cover-heading(data-lang="header.library")
                .container-fluid
                  form.form-inline(name="buscador")
                    .form-group.has-feedback
                      input#searchbox(type="text" class="form-control" placeholder="Search")
                      span.glyphicon.glyphicon-remove.form-control-feedback
                  .row-fluid.col-slider
                    .col-xs-6.scroller.scroller-left.slider-active
                      ul#FSfolders.fileTree
                    .col-xs-6.scroller
                      ul#FSfiles.fileTree
                  .row-fluid.searchCont
                    .col.scroller.scroller-full
                      ul#FSsearch.fileTree
              #tab_chat
                h1.cover-heading(data-lang="header.chat")
                .container-fluid
                  .row-fluid
                    .col-xs-8.scroller.scroller-left
                      ul#chat
                    .col-xs-4.scroller
                      ul#users.list-group
                .chat-footer
                  .input-group
                    input(type="text" class="form-control")
                    span.input-group-btn
                      button.btn.btn-primary(type="button",data-lang="nav.send")
              #tab_about
                h1.cover-heading(data-lang="header.about")
                p.lead
                  | WeDJ is a one-page template for building simple and beautiful home pages. Download, edit the text, and add your own fullscreen background photo to make it your own.
                p.lead
                  a.btn.btn-lg.btn-default(href='#') Learn more

          .mastfoot
            p
              | &copy; We
              b DJ 
              | (2014)
          #templates
            #authModal.modal.fade.bs-modal-sm(tabindex='-1', role='dialog', aria-labelledby='authModal', aria-hidden='false')
              .modal-dialog
                .modal-content
                  .modal-header
                    h4.modal-title(data-lang="modals.login")
                  .modal-body
                    .alert.alert-danger(style="display:none;")
                    form
                      input.form-control(type="text", placeholder="modals.username")
                  .modal-footer
                    button.btn.btn-primary(type='button',data-lang="modals.enter")
            #offlineModal.modal.fade.bs-modal-sm(tabindex='-1', role='dialog', aria-labelledby='offlineModal', aria-hidden='false')
              .modal-dialog
                .modal-content
                  .modal-header
                    h4.modal-title(data-lang="modals.serverOff")
                  .modal-body
                    span(data-lang="modals.serverDisconnected")
                    p(data-lang="modals.serverDisInfo")
            if admin
              #libsModal.modal.fade.bs-modal-sm(tabindex='-1', role='dialog', aria-labelledby='libsModal', aria-hidden='false')
                .modal-dialog
                  .modal-content
                    .modal-header
                      button.close(type="button",data-dismiss="modal",aria-hidden="true") &times;
                      h4.modal-title(data-lang="modals.manLibs")
                    .modal-body
                      .biblio.panel.panel-default
                        .panel-body
                          h4(data-lang="modals.libs")
                          ul.list-group(data-cmd="rmlib")
                        .panel-footer
                          input.form-control(type="text",data-cmd="addlib",placeholder="modals.folderToAdd")
                      .biblioexcl.panel.panel-default
                        .panel-body
                          h4(data-lang="modals.excludes")
                          ul.list-group(data-cmd="rmlibexc")
                        .panel-footer
                          input.form-control(type="text",data-cmd="addlibexc",placeholder="modals.folderToExclude")
                      button.btn.btn-primary(type="button",data-cmd="analyze",data-loading-text="modals.analyzing",data-lang="modals.forceAnalyze")
                    .modal-footer
                      button.btn.btn-default(type="button",data-dismiss="modal",data-lang="close")
                      button.btn.btn-primary(type="button",data-cmd="savecfg",data-loading-text="saving",data-lang="modals.savecfg")
              #exitModal.modal.fade.bs-modal-sm(tabindex='-1', role='dialog', aria-labelledby='exitModal', aria-hidden='false')
                .modal-dialog
                  .modal-content
                    .modal-header
                      button.close(type="button",data-dismiss="modal",aria-hidden="true") &times;
                      h4.modal-title(data-lang="nav.exit")
                    .modal-body(data-lang="modals.exitConfirm")
                    .modal-footer
                      button.btn.btn-default(type="button",data-dismiss="modal",data-lang="cancel")
                      button.btn.btn-primary(type="button",data-lang="nav.exit")
          script(type='text/javascript', src='/js/jquery-2.1.1.min.js')
          script(type='text/javascript', src='/js/bootstrap.min.js')
          script(type='text/javascript', src='/socket.io/socket.io.js')
          script(type='text/javascript', src='/lang.js')
          script(type='text/javascript', src='/js/script.min.js')