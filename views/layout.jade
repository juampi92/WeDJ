doctype html
html
  include inc/header

  body
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container.fixwidth
        .navbar-header
          button.navbar-toggle.nav-keepback(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Navegacion
            span.icon-bar
            span.icon-bar
            span.icon-bar
          #playingsong
            a.navbar-brand
              span.icons
                span.glyphicon.glyphicon-music
              span.song Cargando...
        .navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right.nav-keepback
            li
              a.voteNext(href="#")
                span.glyphicon.glyphicon-forward
                span.descr Siguiente canción
                span.badge
            if admin
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  | Opciones
                  b.caret
                ul.dropdown-menu.adminMenu
                  li.dropdown-header #{ip}
                  li.divider
                  li
                    a(href='#',data-accion='libs')
                      span.glyphicon.glyphicon-list-alt
                      |Bibliotecas
                  li.auto-pilot.active
                    a(href='#',data-accion='autop')
                      span.glyphicon.glyphicon-ok
                      span.glyphicon.glyphicon-random
                      |Auto-pilot
                  li.divider
                  li.dropdown-header Reproducción
                  li.buttonPlay
                    a(href='#',data-accion='rep',data-cmd='play')
                      span.glyphicon.glyphicon-play
                      |Play
                  li.buttonStop
                    a(href='#',data-accion='rep',data-cmd='stop')
                      span.glyphicon.glyphicon-stop
                      |Stop
                  li
                    a(href='#',data-accion='rep',data-cmd='next')
                      span.glyphicon.glyphicon-forward
                      |Next
                  li.divider
                  li
                    a(href='#',data-accion='exit')
                      span.glyphicon.glyphicon-off
                      |Cerrar servidor  
    .site-wrapper
      .site-wrapper-inner
        .cover-container
          .masthead.clearfix
            .inner
              h3.masthead-brand WeDJ
              ul.nav.masthead-nav
                li.active(data-dir="playlist")
                  a.navButton(href="#") Playlist
                li(data-dir="library")
                  a.navButton(href="#") Biblioteca
                li(data-dir="chat")
                  a.navButton(href="#") Chat
                    span.badge
                li(data-dir="about")
                  a.navButton(href="#") Acerca
          .inner.cover
            block content

          include inc/footer
